 # Пример файла окружения для бэкенда
# Скопируйте в .env и отредактируйте значения

# --- База данных ---
# Поддерживаемые драйверы: postgres (по умолчанию) 
DATABASE_DRIVER=postgres
# Хост БД  
DATABASE_HOST=db
# Порт БД
DATABASE_PORT=5432
# Учётные данные БД
DATABASE_USERNAME=prac1
DATABASE_PASSWORD=prac1
# Имя базы данных
DATABASE_NAME=prac1

# --- Логирование ---
# Тип логгера: dev | json | tskv
LOGGER_TYPE=dev

# --- Админ‑аутентификация ---
# Секрет для подписи JWT токена администратора
ADMIN_SECRET=admin
# Пароль для входа администратора (POST /api/afisha/admin/auth)
ADMIN_PASSWORD=admin

# --- Почта (пример для Yandex SMTP) ---
# Логин почтового аккаунта
MAIL_USER=your_yandex_login
# Пароль приложения (создаётся в настройках безопасности Yandex)
MAIL_PASS=your_yandex_app_password
# Адрес отправителя для исходящих писем
MAIL_FROM=you@yandex.ru
